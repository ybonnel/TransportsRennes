<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<TextView android:id="@+id/directionTrajet"
		android:paddingLeft="4dip" android:paddingTop="5dip"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:textSize="14dip"
		/>
	
	<ImageView android:id="@+id/iconePortion"
		android:paddingLeft="4dip" android:paddingTop="5dip"
		android:layout_width="54dip" android:layout_height="55dip"
		android:layout_below="@id/directionTrajet" />

	<TextView android:id="@+id/departHeure" android:paddingLeft="5dip"
		android:paddingTop="5dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="18dip"
		android:layout_toRightOf="@id/iconePortion" android:layout_alignTop="@id/iconePortion" />

	<TextView android:id="@+id/depart" android:paddingLeft="5dip"
		android:paddingTop="5dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="18dip"
		android:layout_toRightOf="@id/departHeure" android:layout_alignTop="@id/departHeure" />

	<TextView android:id="@+id/arriveeHeure" android:paddingLeft="5dip"
		android:paddingTop="2dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="18dip"
		android:layout_toRightOf="@id/iconePortion" android:layout_below="@id/departHeure" />

	<TextView android:id="@+id/arrivee" android:paddingLeft="5dip"
		android:paddingTop="2dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="18dip"
		android:layout_toRightOf="@id/arriveeHeure" android:layout_alignTop="@id/arriveeHeure" />
</RelativeLayout>
